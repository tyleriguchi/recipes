<div>
  <ul>
    <li>Title: {{input value=title}}</li>
    <li>Description: {{input value=description}}</li>
    <li>
      Steps:
      <ol>
      {{#each step in steps}}
        <li>
          {{input type=text value=step.step}}
        </li>
      {{else}}
        <li>
          {{input type=text}}
        </li>
      {{/each}}
      </ol>
    </li>
    <button {{action "save"}}>Save</button>
  </ul>
</div>
