
  <h2>{{title}}</h2>

  <span class="recipe--text">Description: {{description}}</span>

  <ul>Ingredients
  {{#each ingredient in model.ingredients}}
    <li>{{ingredient.size}}, {{ingredient.item}}</li>
  {{/each}}
  </ul>
  <ol>Directions
  {{#each step in model.steps}}
    <li>{{step.item}}</li>
  {{/each}}
  </ol>
  <button {{action "edit"}}>Edit</button>
  <button {{action "delete"}}>Delete</button>
  {{outlet}}
